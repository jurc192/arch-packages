# Maintainer: Jure Vidmar <vidmarjur@gmail.com>
pkgname=jur-userspace
pkgver=1
pkgrel=6
pkgdesc="Personal userspace configuration packages"

arch=('any')
url="https://github.com/jurc192/arch-packages"
license=('GPL')
noextract=('arch-logo.svg')

source=(
    'https://raw.githubusercontent.com/jurc192/themes/main/Jurandom/arch-logo.svg'
    'lightdm.conf'
    )

sha256sums=('04b546ebdc8a47042f0dcb934a39907b05f1b79da174767ae92ebb9cc3c9ab0c'
            '42197c8b8ca0a53d3add71818d030bf3c0f47cfa6cb92a1b1ca641ac94b94b3f')

package() 
{
    # XORG group
    depends=(
        xf86-video-vesa
        xorg-bdftopcf
        xorg-docs
        xorg-font-util
        xorg-fonts-100dpi
        xorg-fonts-75dpi
        xorg-fonts-encodings
        xorg-iceauth
        xorg-mkfontscale
        xorg-server
        xorg-server-common
        xorg-server-devel
        xorg-server-xephyr
        xorg-server-xnest
        xorg-server-xvfb
        xorg-sessreg
        xorg-setxkbmap
        xorg-smproxy
        xorg-x11perf
        xorg-xauth
        xorg-xbacklight
        xorg-xcmsdb
        xorg-xcursorgen
        xorg-xdpyinfo
        xorg-xdriinfo
        xorg-xev
        xorg-xgamma
        xorg-xhost
        xorg-xinput
        xorg-xkbcomp
        xorg-xkbevd
        xorg-xkbutils
        xorg-xkill
        xorg-xlsatoms
        xorg-xlsclients
        xorg-xmodmap
        xorg-xpr
        xorg-xprop
        xorg-xrandr
        xorg-xrdb
        xorg-xrefresh
        xorg-xset
        xorg-xsetroot
        xorg-xvinfo
        xorg-xwayland
        xorg-xwd
        xorg-xwininfo
        xorg-xwud
    )

    # Multimedia
    depends+=(
        pulseaudio
        pulsemixer
    )

    # Display manager
    depends+=(
        lightdm
        lightdm-slick-greeter
    )

    # Desktop environment
    depends+=(
        exo
        garcon
        thunar
        thunar-volman
        tumbler
        xfce4-appfinder
        xfce4-panel
        xfce4-power-manager
        xfce4-session
        xfce4-settings
        xfce4-terminal
        xfconf
        xfdesktop
        xfwm4
        xfwm4-themes
        xfce4-screenshooter
        xdg-user-dirs
        xdg-utils
    )

    # Window manager
    depends+=(
        openbox 
        wmctrl 
        picom
    )

    # Panel & applets
    depends+=(
        tint2
        network-manager-applet
        pasystray
        blueman
        gsimplecal
    )

    # Terminal stuff
    depends+=(
        bash-completion
        tldr
        tmux
    )

    # Themes & fonts
    depends+=(
        papirus-icon-theme
        ttf-fira-code
    )

    # Applications
    depends+=(
        firefox
        code
        rofi
        zathura
        zathura-djvu
        zathura-pdf-mupdf
        zathura-ps
    )

    # Misc, unknown
    depends+=(
        fuse2
        xcape
        xclip
    )


    install -Dm0644 lightdm.conf "$pkgdir"/etc/lightdm/lightdm.conf.d/50-jur-lightdm.conf
    echo "Installed lightdm.conf to /etc/lightdm/lightdm.conf.d/"

    install -Dm 644 arch-logo.svg /usr/share/icons/
    echo "Installed arch-logo.svg to /usr/share/icons"
}